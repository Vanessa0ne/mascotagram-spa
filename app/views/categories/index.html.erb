<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/bad-kuky-0ne/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1631633240/anton-lochov-_b020HIGZUE-unsplash_eahsoc.jpg);">
  <div class="container">
    <h1>Busca los mejores <strong>servicios de mascotas 🦕🐠🐿🐇🦔</strong></h1>
    <p>Al alcance de tu zona.</p>
    <a class="btn btn-flat" href="#">Contáctanos</a>
  </div>
</div>

<!-- Categorías -->
<div class="container my-3">
  <h1>Categorías</h1>
  <!-- Buscador servicios por categoría -->
  <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="query" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i>Buscar
      </button>
    </div>
  </form>

  <!-- Cards de categorías -->
  <div class="cards">
    <% @categories.each do |category| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/bad-kuky-0ne/image/upload/v1631632683/jametlene-reskp-VDrErQEF9e4-unsplash_o78mhl.jpg)">
        <%= link_to category.name, category %>
      </div>
    <% end %>
  </div>
</div>
