<div class="container my-3">
  <h1><%= @category.name %></h1>
  <div class="cards">
    <!-- Services -->
    <% @category.services.each do |service| %>
      <div class="card-trip">
        <!-- Carrusel de fotos -->
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% service.photos.each_with_index do |photo, index| %>
              <% if index.zero? %>
                <div class="carousel-item active">
                 <img class="d-block w-100" src="<%= cl_image_path photo.key %>" alt="slide 1">
                </div>
              <% else %>
                <div class="carousel-item">
                  <img class="d-block w-100" src="<%= cl_image_path photo.key %>" alt="slide <%= index %>">
                </div>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="card-trip-infos">
          <div>
            <h2><%= service.name %></h2>
            <p><%= service.description %></p>
            <p><%= service.city %></p>
            <%= link_to "Ir a detalles", service_path(service), class: "btn btn-ghost" %>
            <%= link_to "Reservar", new_appointment_path, class: 'btn btn-flat' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
