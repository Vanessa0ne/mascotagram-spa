<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <% if customer_signed_in?  %>
      <span><%= current_customer.email %> | Customer </span>
    <% elsif provider_signed_in? %>
       <span><%= current_provider.email %> | Provider </span>
    <% end %>
    <%= image_tag "logo.png" %>
    <%= link_to "Servicios", services_path, class:'btn btn-flat'%>
    <%= link_to "Categorias", categories_path, class: 'btn btn-flat' %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if customer_signed_in? || provider_signed_in? %>
        <li class="nav-item active">
         <!-- <%= link_to "Categorias", "categories", class: "nav-link" %> -->
        </li>
        <li class="nav-item">
          <!-- <%= link_to "Servicio", services_path, class: "nav-link" %> -->
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "logo.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <!-- <%= link_to "Categorias", "categories", class: "dropdown-item" %> -->
            <%= link_to "", "#", class: "dropdown-item" %>
            <% if customer_signed_in?  %>
              <%= link_to "Log out", destroy_customer_session_path, method: :delete, class: "dropdown-item" %>
            <% elsif provider_signed_in? %>
              <%= link_to "Log out", destroy_provider_session_path, method: :delete, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Ingreso cliente", new_customer_session_path, class: "btn btn-flat" %>
        </li>
        <li class="nav-item">
          <%= link_to "Ingreso proveedor", new_provider_session_path, class: "btn btn-flat" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
