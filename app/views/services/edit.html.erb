<h1>Edit Service</h1>
<%= link_to "volver", services_path, class:'btn btn-secondary'%>
<h1>New services Edit</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Edit service</h1>
      <%= simple_form_for @service = Service. find(params[:id])do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :telephone %>
        <%= f.input :category %>
        <%= f.input :description %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
<div>
<%= link_to "back to the future", services_path, class:'btn btn-primary'%>
  
</div>
