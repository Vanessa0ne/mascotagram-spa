 <div class="d-flex justify-content-between align-items-center m-4">
 <div class="row g-0">
    <div class="d-flex col-md-2">
       <img src="https://res.cloudinary.com/bad-kuky-0ne/image/upload/v1632340113/gato_vane_services_ek7vxk.png"/>
    </div>
    <div class="d-flex col-md-8">
      <h5 class="card-text-align-right md-100">Detalle de Servicios</h5>
          <small class="d-flex justify-content-between align-items-text-rigth m-4"><h1><%= @service.name %></h1>
             <p>Dirección: <%= @service.address %></p>
              <p>Categoría: <%= @service.category.name %></p>
              <p>Ciudad: <%= @service.city %></p>
              <p>Horario de atención: <%= @service.availability %></p></small>
             </p>
        </div>
    </div>
  </div>
</div>
  <!-- Fotos -->
  <div class="d-flex justify-content-around">
    <% @service.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>

  <!-- Botones -->
  <div class="d-flex">
    <%= link_to "Volver", services_path, class:'btn btn-secondary'%>
    <%= link_to "Eliminar", services_path, data: { confirm: "¿Estás seguro de eliminar #{@service.name}?"}, class: 'btn btn-outline-secondary' %>
    <%= link_to "Editar", edit_service_path, class: 'btn btn-flat' %>
    <%= link_to "Reservar", new_appointment_path, class: 'btn btn-flat' %>
  </div>
</div>
