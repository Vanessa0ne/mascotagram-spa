<div class="d-flex justify-content-between align-items-center m-3">
  <h1 class="text-center">Servicios</h1>
  <%= link_to "+ Crear un servicio", new_service_path, class: "btn btn-flat" %>
</div>
<div class="d-flex justify-content-around mx-3">
  <div class="cards">
    <% @services.each do |service| %>
      <div class="card-trip">
        <!-- Carrusel de fotos -->
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% service.photos.each_with_index do |photo, index| %>
              <% if index.zero? %>
                <div class="carousel-item active">
                 <img class="d-block w-100" src="<%= cl_image_path photo.key %>" alt="slide 1">
                </div>
              <% else %>
                <div class="carousel-item">
                  <img class="d-block w-100" src="<%= cl_image_path photo.key %>" alt="slide <%= index %>">
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="card-trip-infos">
          <div>
            <h2><%= service.name %></h2>
            <p>Descripci√≥n: <%= service.description %></p>
            <p>Ciudad: <%= service.city %></p>
            <p>Disponibilidad: <%= service.availability %></p>
            <p>Proveedor: <%= service.provider.full_name %></p>
            <%= link_to "Ir a detalles", service_path(service), class: "btn btn-primary" %>
            <%= link_to "Reservar", new_appointment_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
    class="mx-2"
    style="width: 50%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
